<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comentarios"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/prof"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/profile2"/>
                
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prof"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/colorbacktexto"/>

                </FrameLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sólo sobrevio 500 años, sino que tambien ing"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/prof1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/profile2"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prof1"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/colorbacktexto"/>

                </FrameLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/prof1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sólo sobrevio 500 años, sino que tambien ing"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/prof2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/profile2"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prof2"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@color/colorbacktexto"/>

                </FrameLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/prof2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sólo sobrevio 500 años, sino que tambien ing"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>